<link rel="stylesheet" href="./css/character.css"/>
<div id="everything">
    <div id="whitespace">
        <form id="form">
            <div id="race">
                <button class="back" data-back="#background" data-current="#race">Back</button>
                <button class="next" data-next="#class" data-current="#race">Next</button>
                <div class="spacing"></div>
                <h1>Race: <span id="race-span">Dragonborn</span></h1>
                <label  for="Races">Choose a Race:</label>
                <select name="Races" id="Races"></select>
            </div>
            <div id="class">
                <label for="Classes">Choose a Class:</label>
                <select name="Classes" id="Classes">
                    <optgroup label="Player's Handbook">
                        <option value="Barbarian">Barbarian</option>
                        <option value="Bard">Bard</option>
                        <option value="Cleric">Cleric</option>
                        <option value="Druid">Druid</option>
                        <option value="Fighter">Fighter</option>
                        <option value="Monk">Monk</option>
                        <option value="Paladin">Paladin</option>
                        <option value="Ranger">Ranger</option>
                        <option value="Rogue">Rogue</option>
                        <option value="Sorcerer">Sorcerer</option>
                        <option value="Warlock">Warlock</option>
                        <option value="Wizard">Wizard</option>
                    </optgroup>
                    <optgroup label="Tasha's Cauldron of Everything">
                        <option value="Artificer">Artificer</option>
                    </optgroup>
                    <optgroup label="Critical Role">
                        <option value="Blood Hunter">Blood Hunter</option>
                    </optgroup>
                </select>
                <button class="back" data-back="#race" data-current="#class">Back</button>
                <button class="next" data-next="#ability-scores" data-current="#class">Next</button>
            </div>
            <div id="ability-scores">
                <label for="Ability-Scores">Determine Ability Scores:</label>
                <div id="Ability-Scores">
                    <label for="Strength">Strength</label>
                    <input id="Strength" type="number"/>
                    <label for="Dexterity">Dexterity</label>
                    <input id="Dexterity" type="number"/>
                    <label for="Constitution">Constitution</label>
                    <input id="Constitution" type="number"/>
                    <label for="Intelligence">Intelligence</label>
                    <input id="Intelligence" type="number"/>
                    <label for="Wisdom">Wisdom</label>
                    <input id="Wisdom" type="number"/>
                    <label for="Charisma">Charisma</label>
                    <input id="Charisma" type="number"/>
                    <button id="roll-ability-scores">Roll</button>
                </div>
                <button class="back" data-back="#class" data-current="#ability-scores">Back</button>
                <button class="next" data-next="#character-traits" data-current="#ability-scores">Next</button>
            </div>
            <div id="character-traits">
                <label for="Character-Name">Name:</label>
                <input id="Character-Name" placeholder="Character Name."/>
                <label for="Backstory">Backstory:</label>
                <textarea id="Backstory" placeholder="Type your character's backstory here."></textarea>
                <label for="Personality">Personality:</label>
                <textarea id="Personality" placeholder="Type your character's personality here."></textarea>
                <label for="Physcial-Traits">Physical Traits</label>
                <textarea id="Physical-Traits" placeholder="What does your character look like?"></textarea>
                <button class="back" data-back="#ability-scores" data-current="#character-traits">Back</button>
                <button class="next" data-next="#background" data-current="#character-traits">Next</button>
            </div>
